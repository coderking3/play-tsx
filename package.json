{
  "name": "@king-3/play-tsx",
  "version": "1.3.0",
  "description": "Enhanced TypeScript playground powered by tsx - Run .ts files with smart defaults, watch mode, and zero configuration",
  "type": "module",
  "keywords": [
    "typescript",
    "tsx",
    "playground",
    "runner",
    "watch",
    "cli",
    "development",
    "ts-node",
    "typescript-runner"
  ],
  "license": "MIT",
  "homepage": "https://github.com/coderking3/play-tsx#readme",
  "bugs": {
    "url": "https://github.com/coderking3/play-tsx/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coderking3/play-tsx.git"
  },
  "author": "king3 <w2196592083@gmail.com>",
  "files": [
    "bin",
    "dist"
  ],
  "main": "./dist/play.js",
  "types": "./dist/play.d.ts",
  "exports": {
    ".": "./dist/play.js"
  },
  "bin": {
    "play": "./bin/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "play": "tsx src/cli.js",
    "play:bin": "node bin/index.js",
    "build": "tsx scripts/build.ts",
    "format": "prettier --write .",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "release": "bumpp"
  },
  "devDependencies": {
    "@king-3/eslint-config": "^3.1.0",
    "@king-3/prettier-config": "^3.1.0",
    "@types/node": "^24.5.2",
    "ansis": "^4.2.0",
    "bumpp": "^10.2.3",
    "eslint": "^9.36.0",
    "prettier": "^3.6.2",
    "tsdown": "^0.16.5",
    "tsx": "^4.20.6"
  }
}
